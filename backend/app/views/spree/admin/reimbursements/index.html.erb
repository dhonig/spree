<%= render :partial => 'spree/admin/shared/order_tabs', :locals => { :current => 'Reimbursements' } %>

<% content_for :page_title do %>
  <span class="glyphicon glyphicon-arrow-right"></span> <%= Spree.t(:edit_reimbursement) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_customer_return_list), spree.admin_order_customer_returns_url(@order), :icon => 'arrow-left' %>
<% end %>

<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @customer_return } %>

<table class="table table-hover table-condensed table-bordered index">
  <thead data-hook="customer_return_header">
    <tr>
      <th><%= Spree.t(:id) %></th>
      <th><%= Spree.t(:total) %></th>
      <th><%= Spree.t(:status) %></th>
      <th><%= "#{Spree.t('date')}/#{Spree.t('time')}" %></th>
    </tr>
  </thead>
  <tbody>
    <% @reimbursements.each do |reimbursement| %>
      <tr id="<%= spree_dom_id(reimbursement) %>" data-hook="reimbursement_row">
        <td><%= reimbursement.id %></td>
        <td><%= reimbursement.total %></td>
        <td><%= reimbursement.reimbursement_status %></td>
        <td><%= pretty_time(reimbursement.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
